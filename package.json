{
  "name": "electron-react-app",
  "version": "1.0.0",
  "description": "An Electron application with React and TypeScript",
  "main": "electron.cjs",
  "homepage": "./",
  "scripts": {
    "react:dev": "vite",
    "react:build": "tsc && vite build",
    "electron:dev": "concurrently \"npm:react:dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run react:build && electron-builder"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vite": "^5.2.13",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.example.electronreactapp",
    "productName": "ElectronReactApp",
    "files": [
      "dist/**/*",
      "electron.cjs",
      "preload.cjs"
    ],
    "directories": {
      "output": "release"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  }
}